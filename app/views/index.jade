doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html;charset=utf-8')
		meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no')

		title Baba

		link(rel='stylesheet', href='/static/css/main.css', type='text/css')

	body
		header
			h1 Baba
			.slogan Create garbage texts

		script(id='wordlist-template', type='text/ractive')
			section.wordlist
				!='{{#wordlist}}'
				ul.builder.builder-wordlist
					!='{{#words}}'
					li.word
						span.word {{word}}
						ul.actions
							li.edit
								i.icon.icon-edit
							li.delete
								i.icon.icon-delete
					!='{{/words}}'
					li.add-textfield
						input(type='text', data-autosize-input='{space:0}')
					li.buttons
						.add.dropdown(href='#')
							i.icon.icon-add
					li.actions
						.ascending
							i.icon.icon-sort-ascending
						.descending
							i.icon.icon-sort-descending
				!='{{/wordlist}}'

		script(id='sentence-template', type='text/ractive')
			section.sentence
				!='{{#sentences}}'
				ul.builder.builder-sentence
					!='{{#elements}}'
					!='{{#static}}'
					li.static
						.handle {{phrase}}
					!='{{/static}}'
					!='{{^static}}'
					li(class='placeholder {{word.class}} {{word.class}}-{{word.group.key}}')
						ol.prefix
							!='{{#prefix}}'
							li(class='{{key}}') {{label}}
							!='{{/prefix}}'
						.word.handle
							.class {{word.class}}
							.group {{word.group.label}}
						ol.postfix
							!='{{#postfix}}'
							li(class='{{key}}') {{label}}
							!='{{/postfix}}'
						ul.actions
							li.edit
								i.icon.icon-edit
							li.delete
								i.icon.icon-delete
					!='{{/static}}'
					!='{{/elements}}'
					li.buttons
						.add.dropdown(href='#')
							i.icon.icon-add
							ul#dropdown
								li.static-phrase Phrase

								!='{{#wordlist}}'
								li(class='{{class}}') {{group}}
								!='{{/wordlist}}'
					li.actions
						.preview Preview
				!='{{/sentences}}'

		script(id='contents-template', type='text/ractive')
			!='{{>wordlists}}'
			!='{{>sentences}}'

		#contents

		footer
			p
				| Baba Grammar Creator by Kim Silkebækken
				=' · '
				a(href='https://github.com/Lokaltog/baba') GitHub repo

	script(src='//cdn.jsdelivr.net/g/jquery@2.1.0,jquery.ui@1.10.4(jquery.ui.core.min.js+jquery.ui.widget.min.js+jquery.ui.mouse.min.js+jquery.ui.sortable.min.js),ractive@0.4.0')
	script(src='/static/js/main.js')
