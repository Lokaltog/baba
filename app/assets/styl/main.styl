// Imports
@import url('http://fonts.googleapis.com/css?family=Pacifico|Roboto:300,400,700')

// Web fonts
@font-face
	src: url('/static/font/baba-icons.svg') format('svg')
	font-family: baba-icons
	font-style: normal
	font-weight: normal

// Design settings
$font-logo = Pacifico, sans-serif
$font-main = Roboto, sans-serif
$font-icon = baba-icons
$color-foreground = #2e281f
$site-width = 70em
$header-height = 3.5em
$gutter = 2em

$color-accent = #d32
$color-red = #d32
$color-yellow = #e92
$color-green = #7a3

// CSS reset
global-reset()

// Icons
i.icon
	font: normal 1em/1em $font-icon
	&.icon-add
		&::before
			content: '\e800'
	&.icon-delete
		&::before
			content: '\e801'
	&.icon-edit
		&::before
			content: '\e802'
	&.icon-refresh
		&::before
			content: '\e803'
	&.icon-sort-ascending
		&::before
			content: '\e804'
	&.icon-sort-descending
		&::before
			content: '\e805'
	&.icon-minus
		&::before
			content: '\e806'
	&.icon-plus
		&::before
			content: '\e807'
	&.icon-whitespace
		&::before
			content: '\e808'

// Main elements
p
	margin: ($gutter / 2) 0

strong
	font-weight: 700

a
	color: $color-accent
	transition: all .2s ease
	&:hover
		color: lighten($color-accent, 15)

// Form elements
input
	font: 300 1em/1.5 $font-main
	box-sizing: border-box
	margin: 0
	padding: 0 ($gutter / 4)

// Layout
html, body
	font: 300 100%/1.5 $font-main
	color: $color-foreground
	background: url('/static/img/background.png')

header, #contents, footer
	max-width: $site-width
	margin: 0 auto
	padding: 0 $gutter

header, #contents
	box-shadow: 0 10px 40px rgba($color-foreground, .1)

header
	display: flex
	align-items: center
	background: linear-gradient(top, lighten($color-foreground, 15), $color-foreground)
	color: #fff
	height: $header-height
	text-shadow: 0 2px 1px rgba(#000, .4)
	h1
		flex: 1 1 auto
		font: 1.5em $font-logo
		text-transform: lowercase
		color: #fff
	.slogan
		flex: 0 1 auto
		color: lighten($color-foreground, 50)
		font: 1em $font-logo
		text-transform: lowercase

#contents
	background: #fff
	padding-top: $gutter
	padding-bottom: $gutter

footer
	text-align: center
	color: lighten($color-foreground, 50)
	text-shadow: 0 1px #fff
	a
		color: lighten($color-foreground, 50)
		&:hover
			color: lighten($color-foreground, 20)

// Builder styles
$builder-gutter = 5px
section.grammar
	& > h1
		font-weight: 700
		text-transform: uppercase
	section
		h1
			border-bottom: 1px solid lighten($color-foreground, 70)
		section
			padding: ($gutter / 4) 0 ($gutter / 4) ($gutter / 2)

.builder
	cursor: default
	background: url('/static/img/background.png')
	box-shadow: inset 0 1px 2px rgba(#000, .1)
	display: flex
	flex-wrap: wrap
	padding: $builder-gutter 0 0 $builder-gutter
	text-shadow: 0 1px 0 rgba(#fff, .7)
	user-select: none
	ul,
	ol,
	li,
	div
		display: flex
		align-items: center
		flex: 0 1 auto
	& > ul,
	& > ol,
	& > li,
	& > div
		margin: 0 $builder-gutter $builder-gutter 0
	li
		display: flex
		flex: 0 1 auto
	& > li
		.actions
			overflow: hidden
			width: 0
			li
				cursor: pointer
				border-left: 1px solid #ddd
				padding: 0 ($gutter / 4)
				height: 1.5em
				&:hover
					background: $color-foreground
					color: #fff
					text-shadow: 0 1px 1px rgba(#000, .5)
		&:hover
			padding-right: 0
			.actions
				width: auto
				.delete:hover
					background: $color-red
	.icon::before
		line-height: @line-height
	.buttons
		flex: 1 1 auto
		position: relative
	.btn
		border: 0
		box-shadow: inset 0 -1px 1px rgba(#000, .3)
		cursor: pointer
		padding: 0 ($gutter / 4)
		position: relative
		background: rgba($color-foreground, .5)
		color: #fff
		text-shadow: 0 1px 1px rgba(#000, .5)
		text-align: center
		margin: 0 0 0 $builder-gutter
		height: 1.5em
		line-height: 1.5em
		&:hover
			background: $color-foreground
		&.active
			background: $color-green
			&:hover
				background: darken($color-green, 10)

	// word list style
	&.wordlist
		.expr
			box-shadow: 0 1px 2px rgba(#000, .1)
			background: #fff
			.word
				padding: 0 ($gutter / 4)
		.add-textfield
			input
				border: 0
				box-shadow: 0 1px 2px rgba(#000, .1)
				background: rgba(#fff, .4)
				transition: width .2s
				&:focus
					background: rgba(#fff, .8)
				&::-webkit-input-placeholder
					color: rgba(#000, .3)
					text-shadow: 0 1px 0 rgba(#fff, 1)

	// sentence style
	&.sentence
		.path
			&:not(.preview)
				box-shadow: 0 1px 2px rgba(#000, .1)
				background: #fff
				.components
					margin: 0 $builder-gutter 0 0
					& > li
						margin: 0 0 0 $builder-gutter
						text-transform: uppercase
						font-size: .7em
						&:first-child
							padding: 0 $builder-gutter
							line-height: 1.4em
						&:nth-child(2)
							font-weight: 700
				.prefix, .postfix
					color: lighten($color-foreground, 40)
					li
						padding: 0 $builder-gutter
				.prefix
					li
						border-right: 1px solid lighten($color-foreground, 70)
				.postfix
					li
						border-left: 1px solid lighten($color-foreground, 70)
			.components
				& > li
					&:first-child
						background: lighten($color-foreground, 70)
						&.adjective
							background: #dee
						&.noun
							background: #edc
						&.verb
							background: #dec
		li.expr
			&:not(.preview)
				box-shadow: 0 1px 2px rgba(#000, .1)
				background: rgba(#fff, .5)
				font-weight: 400
				.word
					padding: 0 ($gutter / 4)

.dropdown-menu
	position: relative
	ul
		background: #fff
		box-shadow: 0 5px 20px rgba($color-foreground, .1), 0 2px 2px rgba($color-foreground, .5)
	li
		display: block
		color: $color-foreground
		&:hover
			color: #fff
			background: $color-foreground
			& > .dropdown-menu,
			&.static-phrase
				& > .label::after
					background: linear-gradient(left,
						rgba($color-foreground, 0),
						rgba($color-foreground, 1) 80%,
						$color-foreground)
	.label
		white-space: nowrap
		overflow: hidden
		padding: 0 ($gutter / 4)
		display: block
		width: 100%
		text-align: left
		box-sizing: border-box
		text-shadow: none
		&::after
			content: ''
			display: block
			width: 4em
			height: 1.5em
			background: linear-gradient(left, rgba(#fff, 0), rgba(#fff, 1) 80%, #fff)
			position: absolute
			right: 0
			top: 0
		&:hover
			font-weight: 400
	&.has-children
		&::after
			font: normal .7em/2em $font-icon
			content: '\e809'
			position: absolute
			right: ($gutter / 4)
	.dropdown
		display: none
		position: absolute
		z-index: 100
		top: 0
		right -8em
		width: 8em
	&.active
		& > .dropdown
			display: block
	.static-phrase
		position: relative
		margin: 0 0 10px 0
		&::after
			content: ''
			display: block
			height: 1px
			background: lighten($color-foreground, 70)
			position: absolute
			bottom: -5px
			left: 0
			width: 100%
